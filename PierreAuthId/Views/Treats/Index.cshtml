@{
  Layout = "_Layout";
}

@using PierreAuthId.Models;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 

<ul>
  @foreach(Treats Treats in Model)
  {
    <li>@Html.ActionLink($"{Treats.Name}", "Details", new { id = Treats.TreatsId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Treats", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>