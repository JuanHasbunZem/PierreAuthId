@{
  Layout = "_Layout";
}

@model PierreAuthId.Models.Treats

<h2>Edit</h2>

<h4>Edit this Treat: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatsId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorsId")

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to treat list", "Index")</p>