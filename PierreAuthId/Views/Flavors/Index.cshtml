@{
  Layout = "_Layout";
}

@using PierreAuthId.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavors Flavors in Model)
  {
    <li>@Html.ActionLink($"{Flavors.Type}", "Details", new { id = Flavors.FlavorsId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Flavors", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>